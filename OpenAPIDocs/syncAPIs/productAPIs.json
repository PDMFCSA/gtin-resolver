  "paths": {
    "/integration/{domain}/addProduct/{GTIN}": {
      "post": {
        "tags": [
          "Messages"
        ],
        "summary": "Create a new product",
        "description": "Takes a unique GTIN and creates a product with that GTIN.",
        "operationId": "addProduct",
        "parameters": [
          {
            "name": "domain",
            "in": "path",
            "description": "The blockchain domain",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "GTIN",
            "in": "path",
            "description": "Global Trade Item Number of Product",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Creates a new product.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Operation"
          },
          "400": {
            "description": "Invalid Parameter"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/integration/{domain}/updateProduct/{GTIN}": {
      "put": {
        "tags": [
          "Messages"
        ],
        "summary": "Update a product",
        "description": "Update information about an already existing product.",
        "operationId": "updateProduct",
        "parameters": [
          {
            "name": "domain",
            "in": "path",
            "description": "The blockchain domain",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "GTIN",
            "in": "path",
            "description": "Global Trade Item Number of Product",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Updates an already existing product.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Operation"
          },
          "400": {
            "description": "Invalid Parameter"
          }
        }
      }
    },
    "/integration/{domain}/updateProductFromMessages": {
      "put": {
        "tags": [
          "Messages"
        ],
        "summary": "Update a product's info, leaflet and/or image",
        "description": "Takes a JSON message and makes the updates the product's info, leaflet and/or image.",
        "operationId": "digestProductMessages",
        "parameters": [
          {
            "name": "domain",
            "in": "path",
            "description": "The blockchain domain",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Updates a product's info, leaflet and/or image.",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Product"
                    },
                    {
                      "$ref": "#/components/schemas/Leaflet"
                    },
                    {
                      "$ref": "#/components/schemas/ProductImage"
                    }
                  ]
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Pet not found"
          },
          "405": {
            "description": "Validation exception"
          }
        }
      }
    },
