    "/integration/message": {
      "put": {
        "tags": [
          "Messages"
        ],
        "summary": "Create or update DSUs",
        "description": "Takes a JSON message and makes the updates to the DSUs and enterprise metadata database",
        "operationId": "digestMessage",
        "requestBody": {
          "description": "Create or update DSU",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Pet not found"
          },
          "405": {
            "description": "Validation exception"
          }
        }
